<resources>
    <!-- Base application theme. -->
    <style name="Theme.EveryTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rebecca</item>
        <item name="colorPrimaryVariant">@color/yonder</item>
        <item name="colorOnPrimary">@color/raisin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cerulean</item>
        <item name="colorSecondaryVariant">@color/cerulean</item>
        <item name="colorOnSecondary">@color/raisin</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EveryTask.toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rebecca</item>
        <item name="colorPrimaryVariant">@color/yonder</item>
        <item name="colorOnPrimary">@color/raisin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rebecca</item>
        <item name="colorSecondaryVariant">@color/rebecca</item>
        <item name="colorOnSecondary">@color/raisin</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>